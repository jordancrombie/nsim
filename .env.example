# NSIM Configuration
PORT=3006
NODE_ENV=development

# Database (PostgreSQL)
DATABASE_URL=postgresql://bsim:bsim_dev_password@localhost:5432/nsim?schema=public

# BSIM Connection
BSIM_BASE_URL=http://localhost:3001
BSIM_API_KEY=dev-payment-api-key

# Redis (local development)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# AWS (production)
AWS_REGION=ca-central-1
AWS_SQS_QUEUE_URL=

# Authorization expiry in hours (default 7 days)
AUTH_EXPIRY_HOURS=168

# Use async queue processing
USE_QUEUE=false
